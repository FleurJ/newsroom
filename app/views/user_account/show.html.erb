<div class="container">
  <div class="card">
    <div class="card-header">
      Mon compte
    </div>
    <div class="card-body">
      <p class="card-text">
        <div class="form">
          <%= simple_form_for @user, url: user_account_path, method: :patch do |f| %>
            <%= f.check_box :subscribed, label: "" %>
            <span style = "color: <%= @color %>;">Recevoir la revue de presse par email</span>
            <br>
            <%= f.button :submit, value: 'Mettre à jour', "data-disable-with" => "Enregistrement...", class: "btn btn-primary" %>
          <% end %>
        </div>
      </p>
          <br><hr>
        <p class="card-text">
          <%= simple_form_for @user, url: user_account_path(@user), method: :patch do |f| %>
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password,
                          label: "Nouveau mot de passe",
                          required: true,
                          autofocus: true,
                          hint: "6 caractères minimum.",
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          label: "Confirmer votre mot de passe",
                          required: true,
                          hint: 'Vous allez devoir vous reconnecter',
                          input_html: { autocomplete: "new-password" } %>

              <%= f.button :submit,
                           value: 'Changer le mot de passe',
                           "data-disable-with" => "updating..",
                           class: "btn btn-primary" %>
            </div>
          <% end %>
        </p>
    </div>
  </div>
</div>
