<div class="container">
  <h1>Revue de presse <%= @date %></h1>
    <form class="form-inline">
      <%= simple_form_for articles_path, method: :get do |f| %>
      <%= date_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Chercher un article"
      %>
      <%= submit_tag "Chercher", class: "btn btn-secondary" %>
      <% end %>
    </form>
  <br>
  <h2>Articles</h2>
  <% @articles.each do |a| %>
    <li>
      <%= link_to a.title, article_path(a)%>
      <%= "- Date de publication: #{a.publication_date.strftime("%d/%m/%Y")}" %>
    </li>
  <% end %>
</div>
